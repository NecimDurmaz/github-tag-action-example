
COMMIT_MSG_FILE="$1"
COMMIT_MSG=$(cat "$COMMIT_MSG_FILE")

# Conventional Commit formatına uygun Regex
PATTERN="^(feat|fix|build|chore|ci|docs|style|refactor|perf|test)(\([\w\-]+\))?(!)?: .+"

if [[ ! "$COMMIT_MSG" =~ $PATTERN ]]; then
    echo "❌ HATA: Commit mesajı Conventional Commits formatına uygun değil!"
    echo "✅ Doğru format: feat(parser): add ability to parse arrays"
    exit 1
fi

exit 0